<h1>Listing captains</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @captains.each do |captain| %>
  <tr>
    <td><%= captain.name %></td>
    <td><%= link_to 'Show', captain %></td>
    <td><%= link_to 'Edit', edit_captain_path(captain) %></td>
    <td><%= link_to 'Destroy', captain, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

